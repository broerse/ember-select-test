<div class="container-fluid">
	<div class="row">

    <!-- List pages -->
		<div class="col-xs-3">
			<table class='table'>
				<thead>
					<tr><th>Recent Pages</th></tr>
				</thead>
				<tbody>
				{{#each}}
				<tr><td>
					{{#link-to 'page' this}}
						-> {{title}}
					{{/link-to}}
				</td></tr>
				{{/each}}
				</tbody>
			</table>
		</div>

		<!-- page content -->
		<div class="col-xs-9">
			{{outlet}}
		</div>
	</div>
	<button {{action 'createPage'}}>Create</button>
</div>